{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./dist",
    "outDir": "./",
    "sourceMap": false,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2016",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["dist", "node_modules"]
}
